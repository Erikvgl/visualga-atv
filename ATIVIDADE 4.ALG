algoritmo "atividade 4"

var
tempo:real;
salario:real;
inicio
      escreva("digite seu salario:",salario)
      leia(salario)
      escreva("seu tempo de trabalho",tempo)
      leia(tempo)
      se tempo<10 entao
      escreval("seu salario será de:"(salario*0,1)+salario)
      senao
      escreval("seu salario será de:"(salario*0,25)+salario)
      fimse
fimalgoritmo
